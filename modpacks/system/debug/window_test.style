.-bb-floating-test {
  left: 10;
  top: subtract( getIntSetting( "viewport_y" ), 60 );
  width: subtract( getIntSetting( "viewport_x" ), 20 );
  height: 45;

  placement: Placement::FREE;

  Text {
    font-size: 26.0;
    color: rgbaString( "ffffffff" );
    background-color: rgbaString( "00000000" );
  }

  Layout {
    gravity: Gravity::LEFT;

    Spacer {
      width: 30;
    }

    Layout.-bb-ui-clock {
      gravity: Gravity::TOP;

      Spacer {
        height: 5;
      }
    }
  }
}

.-bb-window-test {
  left: 10;
  top: 10;
  width: 600;
  height: 600;

  GridLayout {
    grid-columns: createLayout( 1, 1 );
    grid-rows: createLayout( 1, 1 );
    padding: 10;

    Text.text-block-1 {
      background-color: rgbaString( "0000AAFF" );
    }

    Text.text-block-2 {
      background-color: rgbaString( "00AA00FF" );
    }

    Text.text-block-3 {
      background-color: rgbaString( "AA0000FF" );
    }

    Text.text-block-4 {
      background-color: rgbaString( "AA00AAFF" );
    }
  }
}